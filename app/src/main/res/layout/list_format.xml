<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagePhoto"
        android:layout_width="@dimen/itemlist_width"
        android:layout_height="@dimen/itemlist_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/attraction_1"/>

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemlist_height"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imagePhoto"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/txt_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="@color/list_text_name_color"
            android:textSize="28sp"
            android:text="Name" />

        <TextView
            android:id="@+id/txt_itemAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textSize="15sp"
            android:text="Info" />
    </LinearLayout>
</RelativeLayout>
